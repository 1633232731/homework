<view id="line"></view>
<view id="body">
	<view id="header">
		<text>作业编号: {{homeworkId}}</text>
		<text id="tips">题目总数：{{homeworkCount}}</text>
	</view>
	<view id="test">
		<text id="title">题目{{homeworkCurrent}}</text>
		<text id="problem">{{testQuestion}}</text>
