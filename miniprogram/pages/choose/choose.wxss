.overview {
  background-color: white;
  text-align: left;
  margin-top: 15rpx;
  border-radius: 25rpx;
  margin-left: 2.5%;
  margin-right: 2.5%;
  display: block;
  border: 1px black solid;
}

.navigator-hover {
  position: relative;
  top: 3rpx;
  left: 3rpx;
  opacity: 0.9;
  background: white;
  box-shadow: 0 12px 16px 0 rgba(0, 0, 0, 0.15), 0 17px 50px 0 rgba(0, 0, 0, 0.19);
}

.id {
  font-weight: 300;
  font-size: x-small;
}

.desc {
  font-weight: 500;
  font-size: small;
}

.grade {
  font-weight: 500;
  font-size: small;
  color: blue;
}

.statusActive {
  font-weight: 500;
  font-size: small;
  color: green;
}

.statusFinish {
  font-weight: 500;
  font-size: small;
  color: gray;
}